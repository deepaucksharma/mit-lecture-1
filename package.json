{
  "name": "gfs-visual-learning",
  "version": "1.0.0",
  "description": "Interactive visual learning system for Google File System",
  "main": "docs/app.js",
  "scripts": {
    "start": "npx http-server docs -p 8000",
    "start:test": "npx http-server docs -p 8888",
    "build": "npm run bundle && npm run copy-data",
    "bundle": "cat src/core/*.js src/learning/*.js src/ui/*.js > docs/app.js",
    "copy-data": "cp -r data/specs docs/data/ && cp data/manifest.json docs/data/ && cp data/schema.json docs/data/",
    "validate": "node scripts/validate-all.js",
    "test": "./run-tests.sh",
    "test:comprehensive": "node tests/test-suite.js",
    "test:enhanced": "node tests/test-enhanced-features.js",
    "test:verify": "node tests/verify-enhancements.js",
    "test:report": "open tests/reports/test-report.html || xdg-open tests/reports/test-report.html",
    "test:screenshots": "open tests/screenshots/index.html || xdg-open tests/screenshots/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/gfs-visual-learning.git"
  },
  "keywords": [
    "gfs",
    "distributed-systems",
    "learning",
    "visualization",
    "education"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.6.0",
    "ajv": "^8.12.0",
    "http-server": "^14.1.1",
    "puppeteer": "^21.11.0"
  },
  "dependencies": {
    "playwright": "^1.56.0"
  }
}
